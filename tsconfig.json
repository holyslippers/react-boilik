{
    "compilerOptions": {
      "target": "es2015",
      "module": "es2015",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": false,
      "noImplicitThis": false,
      "moduleResolution": "node",
      "strictPropertyInitialization": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "jsx": "react"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }